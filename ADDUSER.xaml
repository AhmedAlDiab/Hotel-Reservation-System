<UserControl x:Class="Hotel_Reservation_System.ADDUSER"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Reservation_System"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10" Background="Purple">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,5">
            <TextBlock Text="FullName:"/>
            <TextBox Name="txtFullName"/>

            <TextBlock Text="PhoneNumber:"/>
            <TextBox Name="txtPhoneNumber"/>

            <TextBlock Text="Email:"/>
            <TextBox Name="txtEmail"/>
            <TextBlock Text="UserName:"/>
            <TextBox Name="txtUserName" />

            
            <TextBlock Text="Password:"/>
            <TextBox Name="txtPassword"/>
            <CheckBox Name="ISadmin" Content="Is Admin" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <Button Content="Confirm" Click="Confirm_Click" Margin="0,10,0,5"/>
            <Button Content="close" Click="Button_Click" Margin="0,10,0,5"/>
        </StackPanel>
    </Grid>
</UserControl>
