<Window x:Class="Hotel_Reservation_System.ResManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Reservation_System"
        mc:Ignorable="d"
        Title="ResManagementWindow" Height="890" Width="1707">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/New Background.png"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Center" Height="700" Stroke="Black" VerticalAlignment="Center" Width="1350" Fill="#C8E8E7E4"/>
        <Label Foreground="Gold"  Content="Reservation Management" Margin="637,96,0,0" FontWeight="Bold" FontSize="43" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Elephant" Width="602" Height="79" HorizontalContentAlignment="Center" BorderBrush="Black">
            <Label.Effect>
                <DropShadowEffect Opacity="0.495" ShadowDepth="4.5" Direction="-26" BlurRadius="1" RenderingBias="Performance"/>
            </Label.Effect>
        </Label>
        <DataGrid x:Name="ReservationsList" ColumnHeaderHeight="30" AutoGenerateColumns="False" Margin="403,164,234,106" BorderBrush="#FFA79C4F" Background="#663D3D18" FontWeight="Bold"  >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Reservation ID" Width="100" Binding="{Binding ReservationID}"/>
                <DataGridTextColumn Header="Payment ID" Width="87" Binding="{Binding PaymentID}"/>
                <DataGridTextColumn Header="Payment Date" Width="110" Binding="{Binding PaymentDate}" />
                <DataGridTextColumn Header="Payment Method" Width="108" Binding="{Binding PaymentMethod}"/>
                <DataGridTextColumn Header="Check In Date" Width="95" Binding="{Binding CheckInDate}" />
                <DataGridTextColumn Header="Check Out Date" Width="105" Binding="{Binding CheckOutDate}"/>
                <DataGridTextColumn Header="Room Type" Width="85" Binding="{Binding RoomType}"/>
                <DataGridTextColumn Header="Capacity" Width="58" Binding="{Binding Capacity}"/>
                <DataGridTextColumn Header="Total Price" Width="90" Binding="{Binding TotalPrice}"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding Discount}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Cancel" BorderThickness="2" BorderBrush="Black" Background="#FFF0D129" HorizontalAlignment="Left" Margin="205,431,0,0" VerticalAlignment="Top" Height="70" Width="162" FontSize="25" FontWeight="Bold" RenderTransformOrigin="0.526,0.189">
            <Button.Effect>
                <DropShadowEffect Color="#FF5F4B18" Direction="310" Opacity="0.5" ShadowDepth="0" BlurRadius="40"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
