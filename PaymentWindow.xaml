<Window x:Class="Hotel_Reservation_System.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Reservation_System"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/main.jpg"/>
        </Grid.Background>
        <Rectangle Margin="230,10,222,10" Opacity="0.7" Stroke="White" Fill="White"/>
        <Label Foreground="DarkGoldenrod" Content="Payment With Credit Card" Margin="0,18,0,0" FontFamily="Elephant" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#00000000" BorderBrush="Black" Panel.ZIndex="10" Height="44">
            <Label.Effect>
                <DropShadowEffect Opacity="0.4" Color="#FF231D07" Direction="310" ShadowDepth="4" BlurRadius="10"/>
            </Label.Effect>
        </Label>
        <TextBlock HorizontalAlignment="Center" Height="21" Margin="0,67,0,0" TextWrapping="Wrap" Text="Credit Card Number  :" VerticalAlignment="Top" Width="198" FontWeight="Bold" TextAlignment="Center"/>
        <TextBox x:Name="CreditCardNumber" BorderThickness="0.7" BorderBrush="Black" HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Height="21"/>
        <TextBlock HorizontalAlignment="Center" Height="21" Margin="0,123,0,0" TextWrapping="Wrap" Text="Credit Card Type :" VerticalAlignment="Top" Width="102" FontWeight="Bold" RenderTransformOrigin="0.63,0.373"/>
        <TextBox x:Name="CreditCardType" BorderThickness="0.7" BorderBrush="Black" HorizontalAlignment="Center" Margin="0,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="21"/>
        <TextBlock HorizontalAlignment="Center" Height="16" TextWrapping="Wrap" Text="Expire Date (MM/YY) :" VerticalAlignment="Top" Width="130" FontWeight="Bold" Margin="0,183,0,0"/>
        <TextBox x:Name="ExpireDate" BorderThickness="0.7" BorderBrush="Black" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Height="20"/>
        <TextBlock HorizontalAlignment="Center" Height="18" Margin="0,229,0,0" TextWrapping="Wrap" Text="CVV :" VerticalAlignment="Top" Width="34" FontWeight="Bold" RenderTransformOrigin="0.506,-0.235"/>
        <TextBox x:Name="CVV" BorderThickness="0.7" BorderBrush="Black" HorizontalAlignment="Center" Margin="0,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" Height="21"/>
        <Button  BorderThickness="2" BorderBrush="Black" Background="#FFF3BE3A" Content="Submit" HorizontalAlignment="Center" Margin="0,325,0,0" VerticalAlignment="Top" Height="27" Width="130" FontSize="15" FontWeight="Bold" RenderTransformOrigin="0.477,1.439" >
            <Button.Effect>
                <DropShadowEffect Color="#FF5F4B18" Direction="310" Opacity="0.5" ShadowDepth="0" BlurRadius="40"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
