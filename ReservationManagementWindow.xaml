<Window x:Class="Hotel_Reservation_System.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Reservation_System"
        mc:Ignorable="d"
        Title="ReservationWindow" Height="1080" Width="1920">
    <Window.Background>
        <ImageBrush ImageSource="/Image/Wallpaper.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="934" Height="861">
        <TextBlock Text="Reservation Page" 
               FontWeight="Bold" TextAlignment="Center" Margin="0 15 0 50"
               FontSize="40" Foreground="White"  />
        <StackPanel Orientation="Horizontal" Margin="0 0 0 30" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="380" Margin="0 0 20 0">
                <Label Content="Fullname" FontSize="15" Margin="0 0 0 5" ></Label>
                <TextBox x:Name="Fullname" Height="35" VerticalContentAlignment="Center" FontSize="20" />
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right"  Width="380">
                <Label Content="Email" FontSize="15" Margin="0 0 0 5" ></Label>
                <TextBox x:Name="Email" Height="35" VerticalContentAlignment="Center" FontSize="20" />
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 30" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="380" Margin="0 0 20 0">
                <Label Content="Phone Number" FontSize="15" Margin="0 0 0 5" ></Label>
                <TextBox x:Name="Phone" Height="35" VerticalContentAlignment="Center" FontSize="20" />
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right"   Width="380">
                <Label Content="Number of Guests" FontSize="15" Margin="0 0 0 5" ></Label>
                <ComboBox Width="380" Height="35" x:Name="numberOfGuests" FontSize="20" VerticalContentAlignment="Center" >
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="+4"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 30" HorizontalAlignment="Center" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"  Width="380" Margin="0 0 20 0">
                <Label Content="CheckIn Date" FontSize="15" Margin="0 0 0 10" HorizontalAlignment="Left" ></Label>
                <StackPanel Orientation="Horizontal" Width="380" HorizontalAlignment="Left">
                    <Popup Name="CalendarPopup" PlacementTarget="{Binding ElementName=CheckInButton}" 
                    Placement="Bottom" AllowsTransparency="True" 
                       PopupAnimation="Fade"
                       StaysOpen="False"  >
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                            <Calendar Name="CheckInPopup" SelectedDatesChanged="CheckInPopup_SelectedDatesChanged"/>
                        </Border>
                    </Popup>
                    <TextBox Name="DisplayCheckIn" 
                         FontSize="15" VerticalContentAlignment="Center"
                         Height="35" Margin="0 0 10 0" Width="320" />
                    <Button Name="CheckInButton" Width="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Height="30" Click="CheckInButton_Click">
                        <Image Source="/Image/calenderIcon.png" Stretch="Fill"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"  Width="380">
                <Label Content="CheckOut Date" FontSize="15" Margin="0 0 0 10" HorizontalAlignment="Left" ></Label>
                <StackPanel Orientation="Horizontal" Width="380" HorizontalAlignment="Left">
                    <Popup Name="Calendar2Popup" PlacementTarget="{Binding ElementName=CheckOutButton}" 
                    Placement="Bottom" AllowsTransparency="True" 
                       PopupAnimation="Fade" StaysOpen="False"  >
                        <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                            <Calendar Name="CheckOutPopup" SelectedDatesChanged="CheckOutPopup_SelectedDatesChanged"/>
                        </Border>
                    </Popup>
                    <TextBox Name="DisplayCheckOut" Width="320"
             FontSize="15" VerticalContentAlignment="Center"
             Height="35" Margin="0 0 10 0" />
                    <Button Name="CheckOutButton" Width="30"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="0"
            Height="30" Click="CheckOutButton_Click" >
                        <Image Source="/Image/calenderIcon.png" Stretch="Fill"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal"   Margin="0 0 0 30"  HorizontalAlignment="Center">
            <Label Content="Please select room type : " FontSize="20" FontWeight="Medium" Margin="0 0 20 0" />
            <ComboBox Width="261" x:Name="roomType" FontSize="20" SelectionChanged="roomType_SelectionChanged" VerticalContentAlignment="Center" >

            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin=" 0 0 0 30" HorizontalAlignment="Center" >
            <Label Content="Available rooms : " FontSize="20" FontWeight="Medium" Margin="0 0 20 0" />
            <ComboBox Width="590" x:Name="roomsBox" FontSize="20" VerticalContentAlignment="Center" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Bed Type:" FontSize="20" FontWeight="Medium" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Bedtype}" FontSize="20" FontWeight="Medium" Margin="0 0 10 0" />
                            <TextBlock Text="Meal Plan:" FontSize="20" FontWeight="Medium" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding eMealPlan}" FontSize="20" FontWeight="Medium" Margin="0 0 10 0" />
                            <TextBlock Text="P/N:" FontSize="20" FontWeight="Medium" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding PricePerNight}" FontSize="20" FontWeight="Medium" Margin="0 0 10 0" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 20">
            <Button x:Name="showNumberOfNights" Content="Show" HorizontalAlignment="Center" Width="140" Height="35" Foreground="White" FontSize="20" 
         Cursor="Hand" Click="showNumberOfNights_Click" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Brown" 
        BorderBrush="White"  
        BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  Margin="0 0 0 30" HorizontalAlignment="Center" >
            <TextBlock x:Name="DisplayNumberOfNights" Text="Number of nights is : " FontSize="25" FontWeight="DemiBold"
           Width="800"
           TextAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <TextBlock Text="Total Cost is : " FontSize="25" FontWeight="SemiBold" Margin="0 0 0 60" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 20">
            <Button x:Name="bookRoom" Content="Book" HorizontalAlignment="Center" Width="160" Height="45" Foreground="White" FontSize="20" 
                        Cursor="Hand" Click="bookRoom_Click" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Brown" 
                            BorderBrush="White"  
                                BorderThickness="1" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

    </StackPanel>
</Window>