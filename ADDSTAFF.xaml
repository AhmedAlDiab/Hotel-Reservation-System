<UserControl x:Class="Hotel_Reservation_System.ADDSTAFF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Reservation_System"
             mc:Ignorable="d" 
             d:DesignHeight="285" d:DesignWidth="250">

    <Grid Margin="10">
        <Grid.Background>
            <SolidColorBrush Color="#663D3D18" Opacity="0.4"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,5">
            <TextBlock Text="FullName:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Name="txtFullName" Width="150"/>

            <TextBlock Text="PhoneNumber:" HorizontalAlignment="Center" FontWeight="Bold" />
            <TextBox Name="txtPhoneNumber"  Width="150"/>

            <TextBlock Text="Email:" HorizontalAlignment="Center" FontWeight="Bold" />
            <TextBox Name="txtEmail"  Width="150"/>

            <TextBlock Text="UserName:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Name="txtUserName"  Width="150"/>

            <TextBlock Text="Password:" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox Name="txtPassword"  Width="150" />
            <CheckBox Name="chadmin" Content="Is admin" Margin="0,5"  Width="150"  FontWeight="Bold" HorizontalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" >
            <Button Content="Confirm" Click="Button_Click" Margin="0,10,0,5" Background="#FFF3BE3A" BorderBrush="Black" Width="100"/>
            <Button Content="Close"  Width="100" Background="#FFF3BE3A" BorderBrush="Black" Click="Button_Click_1" Margin="0,10,0,5"/>

        </StackPanel>
    </Grid>
</UserControl>
