<UserControl x:Class="Hotel_Reservation_System.Room_Manegment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Reservation_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Image/staff_mangent.png"/>
        </Grid.Background>
        
        <TextBlock Margin="317,70,254,0" TextWrapping="Wrap" Text="    Room Manegment " VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Foreground="#D4AF37" FontFamily="Elephant"/>
        <DataGrid x:Name="roomGrid" AutoGenerateColumns="False" Height="250" Margin="199,101,136,99" ItemsSource="{Binding Rooms}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Room ID" Binding="{Binding RoomID}" Width="60" />
                <DataGridTextColumn Header=" Room Type" Binding="{Binding Roomtype}" Width="80" />
                <DataGridTextColumn Header="Bed Type" Binding="{Binding Bedtype}" Width="60" />
                <DataGridTextColumn Header=" Price" Binding="{Binding PricePerNight}" Width="50" />
                <DataGridTextColumn Header="Availability" Binding="{Binding ISAvailable}" Width="70" />
                <DataGridTextColumn Header="  Capacity" Binding="{Binding Capacity}" Width="80" />
                <DataGridTextColumn Header=" Discount" Binding="{Binding Path=(local:DeluxeRoom.Discount),FallbackValue='-'}" Width="80" />


            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="60,147,0,-147">
            <Button Content="Add Standard Room" Click="AddStandard_Click" Margin="0,0,10,10" Height="30"/>
            <Button Content="Add Deluxe Room" Click="AddDeluxe_Click" Margin="0,0,10,10" Height="37"/>
            <Button Content="Delete Room"  Height="34" Click="Button_Click"/>
        </StackPanel>



    </Grid>
</UserControl>
